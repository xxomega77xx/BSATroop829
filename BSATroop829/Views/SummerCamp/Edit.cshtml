@model SummerCampViewModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Scout Info</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ScoutName" class="form-label">Scout Name</label>
            <input asp-for="ScoutName" type="text" class="form-control"/>
            <span asp-validation-for="ScoutName" class="text-danger"></span>
         </div>
         <div class="mb-3">
            <label asp-for="MeritBadge" class="form-label">Merit Badge</label>
            <input asp-for="MeritBadge" type="text" class="form-control"/>
            <span asp-validation-for="MeritBadge" class="text-danger"></span>
         </div>
         <div class="mb-3">
            <label asp-for="Priority" class="form-label">Prority</label>
            <input asp-for="Priority" type="text" class="form-control"/>
            <span asp-validation-for="Priority" class="text-danger"></span>
         </div>
         <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
         <a asp-controller="SummerCamp" asp-action="Index" class="btn btn-secondary" style="width:150px">
             Back to list
         </a>
    </div>
</form>