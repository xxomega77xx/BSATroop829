@model IEnumerable<SummerCampViewModel>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notifications" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Summer Camp Merit Badge Selections</h2>
            <h3 class="text-primary">Sunday, July 2, 2023 to Saturday, July 8, 2023 <br /> Eastern Daylight Time <br /> Camp Friedlander</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary float-right" hidden="hidden">
                <i class="bi bi-person-fill-add"></i> 
                &nbsp; Add New
                </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.ScoutName)</a>
                </th>
                <th>
                    Merit Badge Selection
                </th>
                <th>
                    Priority
                </th>
                <th>
                    Time Slot
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ScoutName
                    </td>
                    <td>
                        @item.MeritBadge
                    </td>
                    <td>
                        @item.Priority
                    </td>
                    <td>
                        @item.TimeSlot
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> &nbsp; Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> &nbsp; Delete
                        </a>
                </tr>
            }

    </table>
</div>